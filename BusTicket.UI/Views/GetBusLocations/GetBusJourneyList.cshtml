@model GlobalViewModel
@{
    ViewData["Title"] = "GetBusJourneyList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>GetBusJourneyList</h1>

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<div class="card">
    @foreach (var item in Model.getBusJourneysResponses)
    {
        <div class="card-body">
            <div class="d-flex justify-content-center">
                <div class="text-center">
                    <h5 class="card-title">Kalkış:</h5>
                    <span class="time">@Convert.ToDateTime(item.journey.departure).ToString("HH-mm-ss") - </span>
                </div>
                <div class="text-center">
                    <h5 class="card-title">Varış:</h5>
                    <span class="time">@Convert.ToDateTime(item.journey.arrival).ToString("HH-mm-ss")</span>
                </div>
            </div>
            <p class="card-text">@item.journey.origin - @item.journey.destination</p>

            <p class="text-right">
                <button class="btn btn-danger">@Convert.ToDouble(@item.journey.internetprice)</button>
            </p>
        </div>
    }

</div>



